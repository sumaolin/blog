<%- include header %>
<form method="post">
	标题：<br/>
	<input type='text' name='title' value='<%= post.title %>'/><br/>

	标签：<br/>
	<input type='text' name='tag1' value='<%= post.tags[0] %>' disable='disable'/>
	<input type='text' name='tag2' value='<%= post.tags[1]' disable='disable'/>
	<input type='text' name='tag3' value='<%= post.tags[2] %>' disable='disable'/>
	<br/>

	正文：<br/>
	<textarea name='post' rows='20' cols='100'><%= post.post %></textarea>
	<input type="submit" value="保存修改"/>
</form>
<%- include footer %>